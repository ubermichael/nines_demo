  <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
          <tr>
              <th>ID</th>                                       <th>Main</th>
                                                         <th>Sub</th>
                                                         <th>Price</th>
                                                         <th>Description</th>
                  
          </tr>
      </thead>
      <tbody>
      {% for title in titles %}
          <tr>
              <td>
                  <a href="{{ path('title_show', { 'id': title.id }) }}">
                      {{ title.id }}
                  </a>
              </td>
              <td>
                  {{ title.main }}
              </td>
          
              <td>
                  {{ title.sub }}
              </td>
          
              <td>
                  {{ title.price }}
              </td>
          
              <td>
                  {{ title.description|raw }}
              </td>
          
          </tr>
      {% endfor %}
      </tbody>
  </table>
  