  <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
          <tr>
              <th>ID</th>                                       <th>Title</th>
                                                         <th>Description</th>
                  
          </tr>
      </thead>
      <tbody>
      {% for artefact in artefacts %}
          <tr>
              <td>
                  <a href="{{ path('artefact_show', { 'id': artefact.id }) }}">
                      {{ artefact.id }}
                  </a>
              </td>
              <td>
                  {{ artefact.title }}
              </td>
          
              <td>
                  {{ artefact.description|raw }}
              </td>
          
          </tr>
      {% endfor %}
      </tbody>
  </table>
  