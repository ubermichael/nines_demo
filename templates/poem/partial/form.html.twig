{{ form_start(form) }}
{{ form_widget(form) }}
<div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-primary" />
        {% if poem.id is null %}
        <a href="{{ path('poem_index') }}" class="btn btn-warning">
            Cancel
        </a>
        {% else %}
            <a href="{{ path('poem_show', { 'id': poem.id }) }}" class="btn btn-warning">
                Cancel
            </a>
        {% endif %}
    </div>
</div>
{{ form_end(form) }}

